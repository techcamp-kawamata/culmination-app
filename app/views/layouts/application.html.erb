<!DOCTYPE html>
<html>
  
  <head>
    <title>CulminationApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.css">
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <header class="header">
      <div class="nav">
        <div class="nav__left">
          <%= link_to image_tag("culminationapp.png", class: :logo), root_path %>
        </div>

        <% if user_signed_in? %>
        <div class="nav__right"> 
          <div class="greeting"> 
            こんにちは、 
        <%= link_to "#{current_user.name}さん", user_path(current_user.id), class: :greeting__link %>
            <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete }, class: :nav__logout %>
            <%= link_to "New Room", new_room_path, class: :nav__btn %>
          </div>
        <% else %>
          <div class="nav__right">
            <%= link_to "ログイン", new_user_session_path, class: :nav__btn %>
            <%= link_to "新規登録", new_user_registration_path, class: :nav__btn %>
          </div>
        <% end %>
      </div>

    </header>
    
    <%= yield %>

    <footer class="footer">
      <p class="copyright">Copyright © Culminatoion-App All rights reserved.</p>
    </footer>

  </body>
</html>
