<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= @user.name %>さんのプロフィール
      </h2>
        <div class="user__manage">
          <%= link_to "編集する", edit_user_path(@user), class: :prototype__btn %>
          <%= link_to "削除する", user_path(@user), data: { turbo_method: :delete }, class: :prototype__btn %>
        </div>
      <table class="table">
        <tbody>

          <tr>
            <th class="table__col1">名前</th>
            <td class="table__col2"><%= @user.name %></td>
          </tr>

          <tr>
            <th class="table__col1">職業</th>
            <td class="table__col2"><%= @user.occupation %></td>
          </tr>

          <tr>
            <th class="table__col1">役職</th>
            <td class="table__col2"><%= @user.position %></td>
          </tr>

          <tr>
            <th class="table__col1">自己紹介</th>
            <td class="table__col2"><%= @user.profile %></td>
          </tr>

        </tbody>
      </table>
    </div>
  </div>
</div>